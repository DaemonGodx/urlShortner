<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>

    <style>
        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background: #f4f6f8;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1000px;
            margin: 40px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        h1 {
            margin: 0;
            color: #333;
        }

        h2 {
            margin-top: 30px;
        }

        button {
            padding: 8px 14px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            cursor: pointer;
            border-radius: 6px;
            font-size: 14px;
        }

        button:hover {
            background-color: #43a047;
        }

        .logout-btn {
            background-color: #dc3545;
        }

        .logout-btn:hover {
            background-color: #c82333;
        }

        form {
            margin-bottom: 25px;
        }

        input[type="text"] {
            padding: 10px;
            width: 70%;
            max-width: 400px;
            margin-right: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 14px;
        }
        input[type="url"] {
            padding: 10px;
            width: 70%;
            max-width: 400px;
            margin-right: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        .success-box {
            background: #e8f5e9;
            border: 1px solid #c8e6c9;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 25px;
        }

        .short-url {
            color: #2e7d32;
            font-weight: bold;
            word-break: break-all;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th,
        td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
            text-align: left;
            font-size: 14px;
        }

        th {
            background: #f1f1f1;
        }

        tr:hover {
            background-color: #fafafa;
        }

        td.actions {
            text-align: center;
            vertical-align: middle;
        }

        td.actions a,
        td.actions form {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .table-btn {
            padding: 6px 14px;
            font-size: 13px;
            min-width: 80px;
            height: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
        }

        .delete-btn {
            background-color: #e53935;
        }

        .delete-btn:hover {
            background-color: #d32f2f;
        }

        .no-data {
            color: #777;
            font-style: italic;
            margin-top: 10px;
        }

        a {
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="container">

        <!-- HEADER -->
        <div class="header">
            <h1>URL Shortener</h1>

            <form action="/logout" method="POST">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>

        <!-- SUCCESS MESSAGE -->
        <% if (locals.id) { %>
            <div class="success-box">
                <p>
                    ✅ Short URL created:
                    <a class="short-url" href="/url/<%= id %>" target="_blank">
                        http://localhost:5000/url/<%= id %>
                    </a>
                </p>

                <!-- OK BUTTON (important: reloads /url → /) -->
                <a href="/">
                    <button style="margin-top:10px;">OK</button>
                </a>
            </div>
        <% } else { %>

            <!-- URL FORM -->
            <form action="/url" method="POST">
                <label><strong>Enter your URL:</strong></label><br /><br />
                <input type="url" name="redirectUrl" placeholder="www.example.com" required />
                <button type="submit">Shorten</button>
            </form>

            <!-- URL TABLE -->
            <h2>Your URLs</h2>

            <% if (locals.url && url.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Original URL</th>
                            <th>Short URL</th>
                            <th>Clicks</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% url.forEach((urlItem, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= urlItem.redirectUrl %></td>
                                <td><%= urlItem.shortId %></td>
                                <td><%= urlItem.visitHistory.length %></td>

                                <td class="actions">
                                    <a href="/url/<%= urlItem.shortId %>" target="_blank">
                                        <button type="button" class="table-btn">Visit</button>
                                    </a>
                                </td>

                                <td class="actions">
                                    <form action="/url/delete/<%= urlItem.shortId %>" method="POST">
                                        <button type="submit" class="table-btn delete-btn">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p class="no-data">No URLs found. Start by creating one above!</p>
            <% } %>

        <% } %>

    </div>
</body>

</html>
