<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Welcome to my urlShortner</h1>
    <form action="/url" method="POST">
         <label for="OriginalUrl">Enter your static Url</label>
         <input type="url"
          name="redirectUrl"
          placeholder="htps://www.example.com">
          <button type="submit">Shorten</button>
    </form>
    <% if(locals.url){ %>
        <table>
        <thead>
            <tr>
                <th>Seril No.</th>
                <th>Original Url</th>
                <th>Shortened Url</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
           
               <% url.forEach((url,index) => { %>
                 <tr>
                <td><%= index+1 %></td>
                <td><%=url.redirectUrl %></td>
                <td><%=url.shortId %></td>
                <td><%=url. visitHistory.length %></td>
                </tr>
               <% });%>
                
           
            
        </tbody>
     </table>
     <% }%>

</body>
</html>